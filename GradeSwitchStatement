#include<iostream>
#include<iomanip>
#include<string>
#include<ctime>
#include<climits>
using namespace std; 

int main() {
	char grade = ' ';
	bool hotShot = (grade == 'A' || 'B')? true : false; 
	if (hotShot) cout << "this student is exceptional" << endl;

	cout << "Please enter a letter grade (A,B,C,D, OR F: ";
	cin >> grade;

	switch (grade) {
	case 'A': cout << "Far above average" << endl;
		break;
	case 'B': cout << "above average" << endl;
		break;
	case 'C': cout << "average" << endl;
		break;
	case 'D': cout << "below average" << endl;
		break;
	case 'F': cout << "Failture" << endl;
		break;
	default: cout << "Invalid Grade" << endl;
	}



	system("pause");
	return 0;
}
